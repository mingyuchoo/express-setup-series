extends ../layouts/base

block content
  form.form-signin
    h2.form-signin-heading Please login
    label.sr-only(for='inputEmail') Email address
    input.form-control#inputEmail(type='email', placeholder='Email address', required, autofocus)
    label.sr-only(for='inputPassword') Password
    input.form-control#inputPassword(type='password', placeholder='Password', required)
    div.checkbox
      label
        input(type='checkbox', value='remember-me')
        | Remember me
    button.btn.btn-lg.btn-primary.btn-block(type='submit') Login
