extends ../layouts/base

block content
  form.form-signin
    h2.form-signin-heading Please Sign up
    label.sr-only(for='inputEmail') Email address
    input.form-control#inputEmail(type='email', placeholder='Email address', required, autofocus)
    label.sr-only(for='inputPassword') Password
    input.form-control#inputPassword(type='password', placeholder='Password', required)
    label.sr-only(for='inputPasswordAgain') Password Again
    input.form-control#inputPasswordAgain(type='password', placeholder='Password Again', required)
    button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign up
